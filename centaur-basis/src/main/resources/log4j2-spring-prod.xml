<Configuration status="INFO" name="centaur-prod">
  <Properties>
    <!-- @formatter:off -->
    <Property name="LOG_PATH">${spring:centaur.log.path}/logs/${spring:spring.application.name:-centaur}</Property>
    <Property name="LOGFILE_NAME">${spring:spring.application.name:-centaur}</Property>
    <Property name="LOG_EXCEPTION_CONVERSION_WORD">-%wEx</Property>
    <Property name="LOG_LEVEL_PATTERN">%5p [${spring:spring.application.name:-centaur},%X{traceId},%X{spanId}]</Property>
    <!-- @formatter:on -->
  </Properties>

  <Appenders>
    <!-- @formatter:off -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%clr{%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd'T'HH:mm:ss.SSSXXX}}}{faint} %clr{${LOG_LEVEL_PATTERN:-%5p}} %clr{${sys:PID:- }}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40logger{39}}{cyan} %clr{:}{faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>
      <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
    </Console>
    <RollingFile name="RollingFile" fileName="${LOG_PATH}/${LOGFILE_NAME}.log" filePattern="${LOG_PATH}/${LOGFILE_NAME}-%d{yyyy-MM-dd}.log">
      <PatternLayout pattern="%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd'T'HH:mm:ss.SSSXXX}} ${LOG_LEVEL_PATTERN:-%5p} %-5pid --- [%t] %-40.40c{1.} L%-4line : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>
      <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" />
        <SizeBasedTriggeringPolicy size="250MB" />
        <OnStartupTriggeringPolicy />
      </Policies>
      <DefaultRolloverStrategy max="5">
        <Delete basePath="${LOG_PATH}/" maxDepth="1">
          <IfFileName glob="*.log"/>
          <IfLastModified age="7d"/>
        </Delete>
      </DefaultRolloverStrategy>
    </RollingFile>
    <!-- @formatter:on -->
  </Appenders>

  <Loggers>
    <!--Root level logger to control overall logging-->
    <AsyncRoot level="INFO" includeLocation="true">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RollingFile"/>
    </AsyncRoot>
    <logger name="org.apache.kafka" level="warn" additivity="false"/>
  </Loggers>
</Configuration>
