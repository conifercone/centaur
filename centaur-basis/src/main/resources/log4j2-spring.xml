<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="INFO" name="centaur">
  <Properties>
    <Property name="LOG_EXCEPTION_CONVERSION_WORD">-%wEx</Property>
    <!-- @formatter:off -->
    <Property name="LOG_LEVEL_PATTERN">%5p [${spring:spring.application.name:-centaur},%X{traceId},%X{spanId}]</Property>
    <!-- @formatter:on -->
  </Properties>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <!-- @formatter:off -->
      <PatternLayout pattern="%clr{%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd'T'HH:mm:ss.SSSXXX}}}{faint} %clr{${LOG_LEVEL_PATTERN:-%5p}} %clr{${PID:- }}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40logger{39}}{cyan} %clr{:}{faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>
      <!-- @formatter:on -->
    </Console>
  </Appenders>

  <Loggers>
    <!--Root level logger to control overall logging-->
    <Root level="INFO">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
